&GLOBAL
  PRINT_LEVEL LOW
  PROJECT no-gapw-gpw-1
  RUN_TYPE LINEAR_RESPONSE
&END GLOBAL

&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    LSD T
    MULTIPLICITY 2
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 80
    &END MGRID
    &QS
      METHOD GAPW
    &END QS
    &SCF
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 3
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PROPERTIES
    &LINRES
      MAX_ITER 2
      PRECONDITIONER FULL_ALL
      &CURRENT
        COMMON_CENTER 0.0 0.0 0.0
        ORBITAL_CENTER COMMON
      &END CURRENT
      &LOCALIZE
        MAX_ITER 2
        METHOD CRAZY
      &END LOCALIZE
      &NMR
      &END NMR
    &END LINRES
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
    &END CELL
    &COORD
      O   0.000000    0.000000    0.542338
      N   0.000000    0.000000   -0.619815
    &END COORD
    &KIND N
      BASIS_SET 6-31G*
      LEBEDEV_GRID 10
      POTENTIAL ALL
      RADIAL_GRID 20
    &END KIND
    &KIND O
      BASIS_SET SZV-GTH-PADE
      LEBEDEV_GRID 10
      POTENTIAL GTH-BLYP-q6
      RADIAL_GRID 20
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
